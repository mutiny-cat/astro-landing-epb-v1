---
import Button from "../components/button.astro"
---

<div id="top" class="color-section full-height">
  <section class="hero">
    <div class="wrapper">
      <div class="hero-info">
        <div class="hero-copy">
          <h1>Puntaires de</h1>
          <strong>Barcelona</strong>
          <p>L'escola de la punta</p>
        </div>
        <div class="hero-image">
          <img src="/assets/images/puntaire.svg" alt="Imatge d'una puntaire">
          <h3>Trenem escola des de 1962</h3>
        </div>
      </div>
      <div class="hero-cta">
        <Button typeClass="dark" url="#contacta" title="Contacta"></Button>
      </div>
    </div>
  </section>
</div>

<style lang="scss">
  @import "../css/global";

  .color-section {
    background-color: $bg-light;
  }

  .hero {
    background: radial-gradient(ellipse at bottom, #BBFFEF, lighten($bg-transparent, 0), lighten($bg-transparent, 0), #FFE7DC), radial-gradient(ellipse at top, #BBFFEF, lighten($bg-transparent, 0), #CCC9A1, lighten($bg-transparent, 0)) fixed;
    font-family: var(--font-hero-index);
    color: $fg-color-secondary;
    z-index: 0;
  }

  .wrapper {
    max-width: 1600px;
    width: 90%;
    margin: 0 auto;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
    padding: var(--padding-section) 0;
  }

  .hero-info {
    width: 100%;
    display: block;

    @media (width < 768px) {
    }

    @media (width >= 1024px) {
      display: flex;
      align-items: center;
      justify-content: space-evenly;
    }
  }

  .hero-copy {
    margin-bottom: 32px;
    /*width: 100%;*/

    h1, strong {
      display: block;
      font-size: 48px;
      text-align: center;
      line-height: 1;
      color: $fg-color-secondary;

      @media (width < 768px) { font-size: 32px; }
      @media (width >= 1280px) { font-size: 96px; }
    }

    p {
      display: block;
      font-size: 24px;
      font-weight: 600;
      text-align: center;
      color: $fg-color-secondary;

      @media (width < 768px) { font-size: 16px; }
      @media (width >= 1280px) { font-size: 32px; }
    }
  }

  .hero-image {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-bottom: 32px;

    img {
      width: 240px;

      @media (width < 1024px) { width: 160px; }
      @media (width >= 1280px) { width: 320px; }
    }

    h3 {
      font-family: var(--font-italianno);
      font-size: 32px;
      text-align: center;
      line-height: 1;
      color: $fg-color-secondary;

      @media (width < 1024px) { font-size: 24px; }
      @media (width >= 1280px) {
        font-size: 48px;
        /*margin-top: 16px;*/
      }
    }
  }

  .hero-cta {
    z-index: 1;
  }

</style>