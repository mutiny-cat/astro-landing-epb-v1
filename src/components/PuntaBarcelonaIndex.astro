<style lang="scss">
  @import "../css/global";

  .wrapper {
    padding: var(--padding-section) 0 0;
    max-width: 960px;
    width: 90%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    min-height: 100vh;
  }

  .info {
    padding: 64px 0 32px;

    h2 {
      line-height: 1;
    }

    em {
      font-family: var(--font-italianno);
      font-size: 38px;
      font-weight: 400;
    }

    p {
      margin-bottom: 16px;

      &:last-child {
        margin-bottom: 0;
      }
    }

    a {
      text-decoration: none;
      color: $fg-color-title;
      font-style: italic;

      &:hover {
        text-decoration: 1px underline dotted;
      }
    }

    svg {
      $size: 10px;
      width: $size;
      height: $size;
      rotate: 0deg;
      opacity: 1;
      color: $fg-color-title;
      vertical-align: super;
    }

    img {
      width: 100%;
    }

    .video {
      display: flex;
      flex-direction: column;
      margin: 32px auto;
      max-width: 560px;

      iframe {
        border-radius: $border-radius;
        box-shadow: var(--box-shadow2);
        margin: 0 auto .2rem;
        width: 100%;
        max-width: 560px;
        height: 182px;

        @media (width >= 640px) {
          height: 315px;
        }
      }

      a {
        display: block;
        font-size: 14px;
        text-decoration: none;
        color: $fg-color-title;
        font-family: var(--font-cite);
        font-weight: 500;
        font-style: italic;

        &:hover {
          text-decoration: underline dotted;
        }

        svg {
          $size: 12px;
          width: $size;
          height: $size;
          rotate: 0deg;
          opacity: 1;
          margin-left: .2rem;
          color: currentColor;
        }
      }
    }

    .cards-rutes {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      justify-items: center;
      align-items: center;
      justify-content: center;
      align-content: center;
      gap: 2rem;
      margin-top: 4rem;
    }
  }
</style>