---
const { stop, exit} = Astro.props
---

<div>
  <p>{stop} <span>{exit}</span></p>
</div>

<style lang="scss">
  @import "../../css/global";

  div {
    display: flex;
    align-items: center;
    font-size: 14px;
    margin-bottom: 6px;
    color: $fg-color-text;

    p {
      margin-left: 4px;
      font-weight: 500;
    }

    span {
      font-weight: 400;
      font-style: italic;
    }
  }
</style>