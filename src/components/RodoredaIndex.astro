<style lang="scss">
  @import "../css/global";

  .color-section {
    background-color: $bg-light;
  }

  .wrapper {
    max-width: 960px;
    margin: 0 auto;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: var(--padding-section) 0;
    gap: 4rem;

    .image {
      img {
        box-shadow: 0 2px 6px rgba(gray, 25%), 0 8px 24px rgba(gray, 15%), 0 16px 32px rgba(gray, 15%);
        border-radius: $border-radius;
        margin-bottom: .5rem;
      }

      a {
        display: block;
        font-size: 14px;
        text-decoration: none;
        color: currentColor;
        font-family: var(--font-cite);
        font-weight: 500;
        font-style: italic;

        &:hover {
          text-decoration: underline dotted;
          color: $fg-color-text-dark;
        }

        span {
          color: $fg-color-text-dark;
        }

        svg {
          $size: 12px;
          width: $size;
          height: $size;
          rotate: 0deg;
          opacity: 1;
          margin-left: .2rem;
          color: $fg-color-text-dark;
        }
      }
    }

    cite {
      display: block;
      font-family: var(--font-cite);
      font-weight: 500;
      font-size: 18px;
      text-align: right;
    }

    .cite {
      position: relative;
      height: 100%;
      width: 100%;
      padding: 4rem 2rem;
    }

    svg {
      $size: 240px;
      color: lighten($fg-color-secondary, 10);
      opacity: .2;
      rotate: 200deg;
      width: $size;
      height: $size;
      z-index: -1;
    }

    .svg {
      position: absolute;
      top: -75px;
      left: -50px;
    }

    .text {
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;

      h2 {
        color: lighten($fg-color-primary, 0);
        font-family: var(--font-italianno);
        font-weight: 400;
        font-size: 40px;
        line-height: 1;
        text-align: center;
        margin-bottom: 1rem;
      }
    }
  }
</style>
