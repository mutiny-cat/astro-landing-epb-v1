    justify-content: center;
    align-items: center;
    height: 100%;
    position: relative;
  }

  .wrapper {
    padding: var(--padding-section) 0;
    max-width: 960px;
    width: 90%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    min-height: 100vh;

    @media (width >= 1024px) {
      flex-direction: row;
      align-items: center;
    }
  }

  .info {
    position: relative;
    padding: 16px 0;

    @media (width >= 1024px) {
      padding: 0;
      margin-right: 32px;
    }

    .svg {
      position: absolute;
      top: -75px;
      left: -50px;
    }

    svg {
      $size: 240px;
      color: lighten($fg-color-secondary, 10);
      opacity: .2;
      rotate: 200deg;
      width: $size;
      height: $size;
      z-index: -1;
    }

    h2 {
      font-family: var(--font-italianno);
      font-size: 24px;
      font-weight: 400;
      line-height: 1;
      color: lighten($fg-color-primary, 0);
      text-align: center;

      @media (width >= 1024px) {
        font-size: 32px;
      }
    }

    cite {
      display: inline-block;
      font-family: var(--font-cite);
      font-size: 16px;
      text-align: right;
      width: 100%;
      color: lighten($fg-color-primary, 0);
    }
  }

  .image {
    width: 75%;
    max-width: 320px;
    margin: 0 auto;

    @media (width < 768px) { width: 75%; }
    @media (width >= 1024px) { width: 100%; }

    img {
      box-shadow: 0 2px 6px rgba(gray, 25%), 0 8px 24px rgba(gray, 15%), 0 16px 32px rgba(gray, 15%);
      border-radius: $border-radius;
      margin-bottom: .5rem;
      width: 100%;
    }

    a {
      display: block;
      text-align: center;
      font-size: 14px;
      text-decoration: none;
      color: currentColor;
      font-family: var(--font-cite);
      font-weight: 500;
      font-style: italic;

      @media (width >= 1024px) { text-align: left; }

      &:hover {
        text-decoration: underline dotted;
        color: $fg-color-text-dark;
      }
    }

    span {
      color: $fg-color-text-dark;
    }

    svg {
      $size: 10px;
      width: $size;
      height: $size;
      rotate: 0deg;
      opacity: 1;
      margin-left: .2rem;
      color: $fg-color-text-dark;
    }
  }

  .line-top, .line-bottom {
    overflow: hidden;
    position: absolute;
    width: 100%;

    svg {
      width: 100%;
      height: 128px;
      color: $fg-color-light;
      transform: scaleX(-1);
    }
  }

  .line-top {
    bottom: -128px;
    left: 0;
    right: 0;
  }

  .line-bottom {
    top: -128px;
    left: 0;
    right: 0;

    svg {
      color: $fg-color-primary;
      transform: rotate(180deg) scaleX(-1);
    }
  }
</style>
