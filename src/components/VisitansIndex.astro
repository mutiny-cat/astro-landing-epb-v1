<style lang="scss">
  @import "../css/global";

  section {
    width: 100%;
  }

  .cards-days {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    justify-items: center;
    /*align-items: center;*/
    justify-content: center;
    align-content: center;
    gap: 2rem;
    margin-top: 1rem;

    .card-day {
      background-color: lighten($bg-dark, 2);
      padding: 2rem;
      border-radius: $border-radius;
      width: 250px;
      height: 150px;
      display: flex;
      flex-direction: column;
      /*justify-content: center;*/
      align-items: center;

      .day {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 1rem;

        svg {
          margin-right: .3rem;
          color: $fg-color-title;
          width: 24px;
          height: 24px;
        }
      }

      .hours {
        display: flex;
        justify-content: center;
        align-items: center;

        svg {
          margin-right: .3rem;
          color: $fg-color-title;
          width: 18px;
          height: 18px;
        }
      }
    }
  }

  .map {
    background-color: chocolate;

    img {
      width: 100%;
      max-width: 960px;
      margin: 1rem 0;
      border-radius: $border-radius;
      box-shadow: var(--box-shadow);
      transition: box-shadow .3s ease-in-out;

      &:hover {
        box-shadow: var(--box-shadow2);
        transition: box-shadow .3s ease-in-out;
      }
    }
  }
</style>